[Unit]
Description=Filmlinkd - It is a Letterboxd Discord bot
Documentation=https://jimlind.github.io/filmlinkd/
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/app/filmlinkd
ExecStart=/usr/bin/node --optimize_for_size --max-old-space-size=192 --gc_interval=100 /opt/app/filmlinkd/bot.js prod
Restart=on-failure

[Install]
WantedBy=multi-user.target